\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{thesistitle}
\NeedsPackage{graphicx}

\newcommand{\newtitleinfo}[1]{
	\expandafter\providecommand\csname @#1\endcsname{}
	\expandafter\providecommand\csname #1\endcsname{}
	\expandafter\renewcommand\csname @#1\endcsname{Missing #1}
	\expandafter\renewcommand\csname #1\endcsname[1]{\expandafter\renewcommand\csname @#1\endcsname{##1}}
}

\newtitleinfo{title}
\newtitleinfo{author}
\newtitleinfo{supervisor}
\newtitleinfo{supervisorrank}
\newtitleinfo{department}

\renewcommand\maketitle{
	\begin{center}
	\textsc{Eötvös Loránd Tudományegyetem\\ Természettudományi Kar}
	\vspace{0.5cm}
	\hrule
	\vspace{3cm}
	{\large\@author}\\[1cm]
	{\Large\textsc{\@title}}\\[2cm]
	Szakdolgozat\\[4cm]
	Témavezető: \@supervisor, \@supervisorrank\\
	\@department
	\vfill
	\includegraphics[width=5cm]{elte_cimer_ff}\\
	Budapest, 2011.
	\end{center}
	\thispagestyle{empty}
	\clearpage
}
